{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "max-len": [
      "error",
      { "code": 140, "ignoreStrings": true, "ignoreComments": true }
    ],
    "no-console": ["error", { "allow": ["error", "warn", "log"] }],
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "plugins": ["json", "flowtype"]
}
