{
  "addons": ["rollbar"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "required": true
    },
    "NPM_CONFIG_PRODUCTION": {
      "required": true
    },
    "ROLLBAR_ACCESS_TOKEN": {
      "required": true
    },
    "ROLLBAR_ENDPOINT": {
      "required": true
    },
    "YARN_PRODUCTION": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "name": "dgclr",
  "scripts": {},
  "stack": "heroku-18",
  "environments": {
    "test": {
      "scripts": {
        "test-setup": "yarn",
        "test": "yarn test"
      }
    }
  }
}
